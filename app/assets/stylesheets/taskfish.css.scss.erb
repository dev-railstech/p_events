.taskfish-content {
  background-color: #444444;
  min-height: 100%;
}

.header {
  width: 100%;
  height: 60px;
  background-color: #db6557;
  position: relative;
  bottom: 0px;
}

.header-logo{
  margin-left: 15%;
  float: left;
}

.header-available {
  margin-right: 15%;
  float: right;
}

.content {
  width: 70%;
  margin: auto;
  min-height: 490px;
  background-color: white;
}

.footer {
  width: 100%;
  height: 100px;
  margin-top: -10px;
  background-color: #B6B6B6;
  position: relative;
  bottom: 0px;
  text-align: center;
}

.avl_badge{
  height: 50px;
  width: 140px;
  margin-right: 14%;
  margin-top: -30px;
  float: right;
  display: inline-block;
}
.top-align{
  padding-top: 25px;
}

.detail-header {
  width: 100%;
  height: 300px;
  background: url('<%= asset_path("event_header.png") %>') no-repeat;
  background-size: 100% 100%;
}

.half {
  width: 50%;
  height: 100%;
}

.pull-left{
    float: left !important;
}

.pull-right{
    float: right !important;
}

.padding-15 {
    mqrgin: 15px;
}

.event-title {
    font-size: 3em;
    font-weight: bold;
    margin: 20px;
    line-height: 40px;
    color: #ffffff;
}

.event-timing {
    font-size: 1.3em;
    margin: 20px;
    color: #ffffff;
}

.event-venue {
    font-size: 1.3em;
    margin: 20px;
    color: #ffffff;
}

.round_img {
     height: 50px;
     width: 50px;
     border-radius: 25px;
     -moz-border-radius: 25px;
     -moz-border-radius: 25px;
     border-color: #ffffff;
 }

.created_by {
    margin-top: 44px;
    color: #ffffff;
    font-size: 1.3em;
}


.inline {
    display: inline;
}

.gallery_img {
    width: 250px;
    height: 250px;
    border: 1px solid #000000;
    margin: 30px;
}

.content_will_delete {
    background-color: yellow;
    color: #000000;
    text-align: center;
    border-radius: 20px;
    -moz-border-radius: 20px;
    -webkit-border-radius: 20px;
    width:90%;
    margin-left: 5%;
    font-weight: bold;
    padding: 4px;
}

.fish_in_the_party {
    margin-top: 37px;
    color: #ffffff;
    font-size: 1.2em;
}

.round_img_lrg {
    height: 90px;
    width: 90px;
    border-radius: 45px;
    -moz-border-radius: 45px;
    -moz-border-radius: 45px;
    border-color: #ffffff;
    background-color: #ffffff;
    text-align: center;
    font-size: 4em;
    font-weight: bold;
    line-height: 92px;
}

.margin-20 {
    margin: 20px;
}

.event-navigation {
  height: 60px;
  background-image: url("<%= asset_path('event_navigation_bg.gif') %>");
  background-repeat: repeat-x;
  width: 98%;
  padding-left: 2%;
  .navigation-link {
    padding-top: 12px;
    width: 24%;
    display: inline-block;
    text-align: center;
    font-weight: bold;
  }
  .navigation-link:hover{

      color: #db6557;
  }
  .navigation-link.active{
      margin-left: 2px;
      border: 1px solid white;
      -webkit-border-radius: 60px;
      -moz-border-radius: 60px;
      background-color: white;
      padding-bottom: 12px;
      padding-top: 12px;
      margin-top: 7px;
      color: #64CCCC;
  }
}

.event-content-area {
    min-height: 300px;
}